<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/padding_detail_img"
    tools:context=".activities.SearchActivity">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/padding_img_back"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_back"
        tools:ignore="ContentDescription" />

    <AutoCompleteTextView
        android:id="@+id/edit_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_back"
        android:completionThreshold="1"
        android:hint="@string/edit_search"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="@dimen/edit_search"
        app:endIconMode="clear_text"
        tools:ignore="RelativeOverlap" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/padding_img_back"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_delete"
        tools:ignore="ContentDescription" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_search"
        android:paddingTop="@dimen/padding_detail_img"
        android:paddingEnd="@dimen/padding_detail_img"
        tools:ignore="RtlSymmetry" />

</RelativeLayout>